{
  "name": "Azure CLI Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "workspaceFolder": "/workspaces",
  "onCreateCommand": "python -m venv venv",
  "postCreateCommand": "cat azure-cli/.devcontainer/login.sh >> ~/.bashrc && cp azure-cli/.devcontainer/setup.sh easy_setup.sh && chmod +x easy_setup.sh",
  "hostRequirements": {
    "cpus": 16,
    "memory": "64gb",
    "storage": "128gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
