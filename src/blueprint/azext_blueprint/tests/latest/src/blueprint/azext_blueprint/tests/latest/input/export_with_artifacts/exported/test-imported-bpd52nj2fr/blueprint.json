        "targetScope": "subscription",
        "parameters": {
            "storageAccountType": {
                "type": "string",
                "defaultValue": "Standard_LRS",
                "allowedValues": [
                    "Standard_LRS",
                    "Standard_GRS",
                    "Standard_ZRS",
                    "Premium_LRS"
                ]
            },
            "tagName": {
                "type": "string"
            },
            "tagValue": {
                "type": "string"
            },
            "contributors": {
                "type": "array"
            },
            "owners": {
                "type": "array"
            }
        },
        "resourceGroups": {
            "storageRG": {
                "dependsOn": []
            }
        }
    }
}