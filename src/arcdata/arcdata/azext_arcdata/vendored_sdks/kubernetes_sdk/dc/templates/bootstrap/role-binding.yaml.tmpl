apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ model.roleBindingName }}
  namespace: {{ model.namespace }}
subjects:
- kind: ServiceAccount
  name: {{ model.serviceAccountName }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ model.roleName }}