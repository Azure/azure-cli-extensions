{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "ConfigGroupSchema",
    "type": "object",
    "properties": {
        "ubuntu": {
            "type": "object",
            "properties": {
                "nfdvName": {
                    "type": "string"
                },
                "deploymentParameters": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "location": {
                                "type": "string"
                            },
                            "subnetName": {
                                "type": "string"
                            },
                            "virtualNetworkId": {
                                "type": "string"
                            },
                            "sshPublicKeyAdmin": {
                                "type": "string"
                            }
                        }
                    }
                },
                "managedIdentityId": {
                    "type": "string"
                }
            },
            "required": [
                "nfdvName",
                "deploymentParameters",
                "managedIdentityId"
            ]
        }
    },
    "required": [
        "ubuntu"
    ]
}