param managedEnvironments_aca_env_name string

resource configServerTest 'Microsoft.App/managedEnvironments/javaComponents@2024-02-02-preview' = {
    name: '${managedEnvironments_aca_env_name}/{{ data.configServerName }}'
    dependsOn: [
        resourceId('Microsoft.App/managedEnvironments', managedEnvironments_aca_env_name)
    ]
    properties: {
        componentType: 'SpringCloudConfig'
        configurations: [
            {% for config in data.configurations %}
            {
                propertyName: '{{ config.propertyName }}'
                value: '{{ config.value }}'
            }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
        scale: {
            minReplicas: {{ data.replicas }}
            maxReplicas: {{ data.replicas }}
        }
    }
}